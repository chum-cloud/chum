# Server
PORT=3001

# Solana RPC (Helius recommended)
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
HELIUS_API_KEY=your-helius-api-key

# Authority keypair (comma-separated bytes)
CHUM_SIGNING_KEY=1,2,3,...,64

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...

# Wallets
TEAM_WALLET=your-team-wallet-address
GROWTH_WALLET=your-growth-wallet-address

# CORS
CORS_ORIGINS=https://your-domain.com

# Optional: Irys node (defaults to node1.irys.xyz)
# IRYS_NODE=https://node1.irys.xyz

# Optional: Collection addresses for holder verification
# FELLOW_VILLAINS_COLLECTION=your-collection-address
# SEEKER_GENESIS_COLLECTION=your-collection-address
